<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/widget_title_label"
            android:layout_width="match_parent"
            android:background="@color/primaryColor"
            android:textColor="@color/black"
            android:textSize="@dimen/widget_title_text_size"
            android:layout_height="@dimen/widget_title_min_height"
            android:gravity="center"/>
    </LinearLayout>

    <ListView
        android:id="@+id/ingredients_lv_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/widget_ingredient_item"/>

</LinearLayout>